
<link rel="stylesheet" type="text/css" href="<%=assetPath('/css/all-books.css')%>">
<div id="shelf">
    <%for(var i=0;i<book.length;i++){%>

        <div id="book">

            <a id="book-img" href="<%=book[i].avatar%>"><img src="<%=book[i].avatar%>" alt="Book Image" height="100%" width="100%"></a>
            <div id="book-info">
                <h4 id="book-title"> <%=book[i].title%> </h4>
                <p>Author: <%=book[i].author%></p>
                <p>Location: <%=book[i].location%></p>
                <p>Seller: <a href="/users/profile/<%=book[i].user.id%>"><%=book[i].user.name%></a></p>
                <p id="price">â‚¹<%=book[i].price%></p>
            </div>
        </div>

    <%}%>

</div>